#include "tokenization.hpp"

#include "canopy/main.hpp"

#include <fmt/format.h>

using namespace silva;

expected_t<void>
silva_main()
{
  const auto arg_filename = SILVA_EXPECT_TRY(env_context_get("filename"));

  unique_ptr_t<source_code_t> source_code = SILVA_EXPECT_TRY(source_code_t::load(arg_filename));
  const tokenization_t tokenization       = SILVA_EXPECT_TRY(tokenize(std::move(source_code)));

  fmt::print("{}\n", tokenization.to_string());

  return {};
}
SILVA_MAIN(silva_main);
